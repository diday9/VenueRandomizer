<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/colorPrimaryAlpha"
        android:transitionName="card">

        <include layout="@layout/toolbar" />

        <TextView
            android:id="@+id/venue_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|start"
            android:layout_margin="@dimen/card_inner_margin"
            android:layout_marginTop="@dimen/card_inner_margin"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/light_text"
            android:transitionName="venue_name" />

    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/list_height"
                android:layout_marginLeft="@dimen/card_inner_margin"
                android:layout_marginRight="@dimen/card_inner_margin"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/category_icon"
                    android:layout_width="@dimen/list_icon_dimension"
                    android:layout_height="@dimen/list_icon_dimension" />

                <TextView
                    android:id="@+id/category_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:transitionName="category"
                    android:layout_marginLeft="@dimen/card_inner_margin"
                    android:gravity="center_vertical"
                    android:textAppearance="?android:attr/textAppearanceListItem"
                    android:textColor="@color/dark_text" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
