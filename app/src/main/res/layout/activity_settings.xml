<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <TextView
        style="@style/ListViewHeaderTextStyle"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:text="@string/settings_image" />

    <RelativeLayout
        android:id="@+id/high_res_support"
        style="@style/ListViewStyle"
        android:background="@drawable/selector_list_full_background"
        android:clickable="true"
        android:descendantFocusability="blocksDescendants">

        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/offline_mode_cb"
            style="@style/ListViewIconStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            app:buttonTint="@color/colorPrimary" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/offline_mode_cb"
            android:layout_toStartOf="@id/offline_mode_cb"
            android:orientation="vertical">

            <TextView
                style="@style/ListViewSingleTextStyle"
                android:text="@string/settings_hi_res" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/dynamic_images"
        style="@style/ListViewStyle"
        android:background="@drawable/selector_list_bottom_background"
        android:clickable="true"
        android:descendantFocusability="blocksDescendants">

        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/dynamic_images_cb"
            style="@style/ListViewIconStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            app:buttonTint="@color/colorPrimary" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/dynamic_images_cb"
            android:layout_toStartOf="@id/dynamic_images_cb"
            android:orientation="vertical">

            <TextView
                style="@style/ListViewSingleTextStyle"
                android:text="@string/settings_dynamic_images" />
        </LinearLayout>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/spl_support"
        style="@style/ListViewStyle"
        android:background="@drawable/selector_list_bottom_background"
        android:clickable="true"
        android:descendantFocusability="blocksDescendants">

        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/spl_support_cb"
            style="@style/ListViewIconStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            app:buttonTint="@color/colorPrimary" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/spl_support_cb"
            android:layout_toStartOf="@id/spl_support_cb"
            android:orientation="vertical">

            <TextView
                style="@style/ListViewSingleTextStyle"
                android:text="@string/settings_max_image_count" />
        </LinearLayout>
    </RelativeLayout>

    <TextView
        style="@style/ListViewHeaderTextStyle"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:text="@string/settings_system" />

    <RelativeLayout
        android:id="@+id/locale"
        style="@style/ListViewStyle"
        android:background="@drawable/selector_list_full_background"
        android:clickable="true"
        android:descendantFocusability="blocksDescendants">

        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/locale_cb"
            style="@style/ListViewIconStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            app:buttonTint="@color/colorPrimary" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/locale_cb"
            android:layout_toStartOf="@id/locale_cb"
            android:orientation="vertical">

            <TextView
                style="@style/ListViewSingleTextStyle"
                android:text="@string/settings_locale" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>