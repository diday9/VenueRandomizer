<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="horizontal">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/card_inner_margin"
        android:layout_marginRight="@dimen/card_inner_margin"
        android:layout_weight="1"
        android:src="@drawable/ic_location"
        android:visibility="invisible"
        app:backgroundTint="@color/location_color"
        app:elevation="5dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/telephone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/card_inner_margin"
        android:layout_marginRight="@dimen/card_inner_margin"
        android:layout_weight="1"
        android:src="@drawable/ic_phone"
        android:visibility="invisible"
        app:backgroundTint="@color/telephone_color"
        app:elevation="5dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/card_inner_margin"
        android:layout_marginRight="@dimen/card_inner_margin"
        android:layout_weight="1"
        android:src="@drawable/ic_web"
        android:visibility="invisible"
        app:backgroundTint="@color/web_color"
        app:elevation="5dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/facebook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/card_inner_margin"
        android:layout_marginRight="@dimen/card_inner_margin"
        android:layout_weight="1"
        android:src="@drawable/ic_fb"
        android:visibility="invisible"
        app:backgroundTint="@color/fb_color"
        app:elevation="5dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/twitter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/card_inner_margin"
        android:layout_marginRight="@dimen/card_inner_margin"
        android:layout_weight="1"
        android:src="@drawable/ic_twitter"
        android:visibility="invisible"
        app:backgroundTint="@color/twitter_color"
        app:elevation="5dp" />


</LinearLayout>